<div class="w3-row-padding" style="background-color: white;">
{{#each templates}}
    <div class="w3-third w3-container w3-margin-bottom">
        <a id="plink" href="/design/personalize/{{tid}}"><img src="/designs/templates/{{tid}}.gif" alt="{{name}}" style="width:100%" class="w3-hover-opacity"></a>
    </div>
{{/each}}
</div>
{{#section 'jquery'}}
<script>
    $(document).ready(function () {
        var dwww = "";
        var prdname = "";
        if (getParameterByName("dwww") !== null)
            dwww = getParameterByName("dwww");
        if (getParameterByName("prdname") !== null)
            prdname = getParameterByName("prdname");
        // append parameters to all plink
        var querystring = "prdname="+prdname+"&dwww="+dwww;
        $('a').each(function () {
            var href = $(this).attr('href');
            if (href) {
                href += (href.match(/\?/) ? '&' : '?') + querystring;
                $(this).attr('href', href);
            }
        });
    });
</script>
{{/section}}